<%args>
  $dst => ''
</%args>
<%init>
use EBox::Gettext;
</%init>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title>Zentyal</title>
  <meta http-equiv=Content-Type content="text/html; charset=utf-8" />
  <link href="/dynamic-data/css/captiveportal.css" type="text/css" rel="stylesheet" />
  <script type="text/javascript">
    window.zentyal_timestamp = (new Date).getTime()
    function launch() {
        window.open("/Popup", "zentyalcaptiveportal", "resizable=1,width=460,height=344,location=no,menubar=no,scrollbars=no,status=no,titlebar=no,toolbar=no");
    }
    function continueToDst(dst)
    {
       var now = (new Date).getTime();

       while (now < (window.zentyal_timestamp + 90)) {
          alert ('sleep 10');
          sleep(10);
          now = now + 10;
       }
       window.location = dst;
    }
  </script>
</head>
<body onload="launch()">
  <center>
   <div id="login" class="popuplaunch">
       <img src="/data/images/hotelsunset.jpg" alt="Bristol Inn Logo" id="logo" style="float: none; margin: 0 auto; display: block; width: 100%;"/>
       <div style="padding: 15px">
         <% __x('You have logged in successfully. If your web browser blocked the popup click {hbeg}here{hend} and allow it.', hbeg => "<a href='javascript:launch()'>", hend => "</a>") %>
	<p />Or, click <a href="/Popup" target="_blank">here</a> to open the popup in a new tab or window.
       </div>
%      if ($dst) {
       <div style="padding: 15px">
         <a href="#" onclick="continueToDst('<% $dst %>'); return false">
           <% __('Continue to your destination')  %>
         </a>
       </div>
%      }
     </div>
  </center>

  <div id="footer"><% __x("Created by {href}", href => "<a href='http://www.zentyal.com/'>Zentyal S.L.</a>") %></div>
</body>
</html>

