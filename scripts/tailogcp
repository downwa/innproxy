#!/bin/sh
# Tail log captive portal

tlen=999999

# find /var/log/zentyal-captiveportal/access.log* -mtime -7 | sort -r | while read file; do
find /var/log/zentyal-captiveportal/access.log* | sort -r | while read file; do
	date +"%D %T: $file" 1>&2
	if [ "$file" = "/var/log/zentyal-captiveportal/access.log.1" ]; then
		cat "$file"
	else if [ "$file" = "/var/log/zentyal-captiveportal/access.log" ]; then
		tail -n $tlen -f "$file"
	else
		zcat "$file"
	fi fi
done
